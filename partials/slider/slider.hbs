<div class="o-layout__slider-container">
    <div class="o-layout__slider">

        {{#if slider-revealer}}
        {{> slider-reveal}}
        {{/if}}

        {{#unless slider-revealer}}

        {{#if slider-main}}
        <div class="rev_slider_wrapper{{#unless standard-height}} fullscreen-container{{/unless}}" style="background-color:#102535;padding:0px;">

            <div id="rev_slider_{{#unless custom-id}}main{{/unless}}{{#if custom-id}}{{custom-id}}{{/if}}" class="rev_slider tp-overflow-hidden{{#unless standard-height}} fullscreenbanner{{/unless}}" data-version="5.4.5" style="display:none">
                <!-- BEGIN SLIDES LIST -->
                <ul>
                
                    {{#if standard-slider}} 
                    {{> slide-countdown}}
                    {{> slide-openday}}
                    {{/if}}

                    {{#unless standard-slider}}
                    {{> slide-standard}}
                    {{> slide-youtube}}
                    {{> slide-local-video}}
                    {{/unless}}

                </ul><!-- END SLIDES LIST -->
        
            <!-- ******************* -->
            <!-- BEGIN STATIC LAYERS -->
            <!-- ******************* -->
            {{#unless no-play-controls}}
            <div class="tp-static-layers">
                <!-- PLAY?PAUSE TOGGLE SLIDE STATIC LAYER -->
                <div class="tp-caption tp-resizeme tp-static-layer" 
                id="pauseButton" 
                data-x="left" 
                data-y="bottom" 
                data-hoffset="30" 
                data-voffset="30"
                data-type="text" 
                data-actions='[{"event":"click","action":"toggleslider","delay":""}]'
                data-responsive_offset="on" 
                data-startslide="0" 
                data-endslide="999" 
                data-frames='[{"delay":2000,"speed":300,"frame":"0","from":"opacity:0;","to":"o:1;","ease":"Power3.easeInOut"},{"delay":"wait","speed":300,"frame":"999","to":"opacity:0;","ease":"Power3.easeInOut"}]'
                style="z-index: 11;font-size: 16px;color: #ffffff;cursor:pointer;">
                <div class="rs-untoggled-content"><i class="fa fa-play"></i> <span class="u-hidden-text">play slide</span></div><div class="rs-toggled-content"><i class="fa fa-pause"></i> <span class="u-hidden-text">pause slide</span></div>
                </div>
                <!-- END STATIC LAYER -->

            </div>
            {{/unless}}
            <!-- END STATIC LAYERS -->
        
            <div class="tp-bannertimer tp-bottom" style="height: 5px; background-color: rgba(0,0,0,.5)"></div>
        
            </div><!-- END SLIDER CONTAINER -->
        
        </div><!-- END SLIDER CONTAINER WRAPPER -->
        {{/if}}

        {{#unless slider-main}}
        {{#unless hide-slider-min}}
        <div class="c-minimal-banner" style="background-image: url('//www.adelaide.edu.au/front/images/slides/study-2019.jpg');"></div>
        {{/unless}}
        {{/unless}}

        {{/unless}}

    </div> {{!-- o layout slider --}}
</div>